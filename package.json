{
    "name": "prezly-slate",
    "description": "Prezly software built upon Slate",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/slate.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/slate/issues"
    },
    "homepage": "https://github.com/prezly/slate#readme",
    "type": "module",
    "scripts": {
        "bootstrap": "npm ci --legacy-peer-deps",
        "build": "npm run build -w packages/slate-types -w packages/slate-commons -w packages/slate-lists -w packages/slate-tables -w packages/slate-editor",
        "check": "npm run prettier && npm run test",
        "watch": "concurrently --kill-others --names 'types  ,common ,lists  ,editor ' 'npm run watch -w packages/slate-types' 'npm run watch -w packages/slate-commons' 'npm run watch -w packages/slate-lists' 'npm run watch -w packages/slate-tables' 'npm run watch -w packages/slate-editor'",
        "lint": "npm run lint --workspaces",
        "lint:fix": "npm run lint --workspaces -- --fix",
        "test": "npm run test --workspaces",
        "test:matrix": "npm run test:react16 && npm run test:react17 && npm run test:react18",
        "test:react16": "REACT_VERSION=16 npm run test:react",
        "test:react17": "REACT_VERSION=17 npm run test:react",
        "test:react18": "REACT_VERSION=18 npm run test:react",
        "test:react": "npm rm react react-dom @types/react @types/react-dom && npm install react@$REACT_VERSION react-dom@$REACT_VERSION @types/react@$REACT_VERSION @types/react-dom@$REACT_VERSION && npm run clean:build && npm run build && npm run test",
        "clean": "npm run clean:build && npm run clean:node_modules",
        "clean:build": "npm run clean:build --workspaces && rimraf *.tsbuildinfo",
        "clean:node_modules": "npm run clean:node_modules --workspaces && rimraf node_modules/",
        "prettier": "prettier --check './**/*.(js|ts|tsx|scss)'",
        "prettier:fix": "npm run prettier -- --write --no-list-different",
        "release": "npm run release:prepare && npm run release:publish",
        "release:build": "npm run clean && npm run bootstrap && npm run build",
        "release:prepare": "npm run release:build && npm run check",
        "release:publish": "lerna publish --force-publish"
    },
    "devEngines": {
        "node": ">= 16.13.0",
        "npm": ">= 7.7.0"
    },
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "react": "^16.9.0 || ^17.0.0 || ^18.0.0",
        "react-bootstrap": "=0.32.4",
        "react-dom": "^16.9.0 || ^17.0.0 || ^18.0.0",
        "slate": "^0.81.0",
        "slate-history": "^0.66.0",
        "slate-react": "^0.81.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/preset-typescript": "^7.17.12",
        "@dr.pogodin/babel-preset-svgr": "^1.3.1",
        "@types/gulp-babel": "^6.1.30",
        "@types/jest": "^27.0.3",
        "@types/react": "^16.9.0 || ^17.0.0 || ^18.0.0",
        "@types/react-dom": "^16.9.0 || ^17.0.0 || ^18.0.0",
        "@types/through2": "^2.0.36",
        "@types/vinyl": "^2.0.6",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "autoprefixer": "^10.4.0",
        "babel-plugin-add-import-extension": "^1.6.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-remove-imports": "^1.7.0",
        "branch-pipe": "^1.0.1",
        "concurrently": "^6.4.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-filter": "^7.0.0",
        "gulp-map": "^0.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "gulp-tap": "^2.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gulp-use": "^0.0.4",
        "jest": "^27.3.1",
        "jest-canvas-mock": "^2.3.1",
        "lerna": "^3.22.1",
        "postcss": "^8.4.1",
        "postcss-modules": "^4.3.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "sass": "^1.32.8",
        "slate-hyperscript": "^0.77.0",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "tsc-fancy": "^1.1.2",
        "typescript": "^4.7.4",
        "vinyl": "^2.2.1"
    }
}
